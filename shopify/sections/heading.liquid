<div class="content-section gutter--on heading heading--alignment-{{ section.settings.alignment }} {% if section.settings.color_bg != 'rgba(0,0,0,0)' %} parent-has-inner-padding {% endif %}">

  <div class="heading__content">

    {% unless section.settings.title == blank %}
      <h2 class="heading__title h1">{{ section.settings.title | escape }}</h2>
    {% endunless %}

    {% unless section.settings.body == blank %}
      <p>{{ section.settings.body }}</p>
    {% endunless %}

  </div>

  {% unless section.settings.button_label == blank %}
    <div class="heading__button">
      <a class="button button--outline" href="{{ section.settings.button_link | escape }}" title="{{ section.settings.button_label }}">{{ section.settings.button_label | escape }}</a>
    </div>
  {% endunless %}

</div>

{% if section.settings.color_bg != 'rgba(0,0,0,0)' %}
  {% style %}
    #shopify-section-{{ section.id }} .heading {
      background: {{ section.settings.color_bg }};
      padding-top: 10vw;;
      padding-bottom: 10vw;;
    }
    @media all and (max-width: 1280px) {
      #shopify-section-{{ section.id }} .heading {
        padding-top: 100px;
        padding-bottom: 100px;
      }
    } 
    @media all and (max-width: 948px) {
      #shopify-section-{{ section.id }} .heading {
        padding-top: 70px;
        padding-bottom: 70px;
      }
    }
    @media all and (max-width: 480px) {
      #shopify-section-{{ section.id }} .heading {
        padding-top: 50px;
        padding-bottom: 50px;
      }
    }
    #shopify-section-{{ section.id }} {
      margin-top: 0;
    }
  {% endstyle %}
{% endif %}

{% if section.settings.color_text != 'rgba(0,0,0,0)' %}
  {% style %}
    #shopify-section-{{ section.id }} .heading {
      color: {{ section.settings.color_text }};
    }
    #shopify-section-{{ section.id }} .heading a {
      color: {{ section.settings.color_text }};
    }
    #shopify-section-{{ section.id }} .heading .button--outline {
      border-color: {{ section.settings.color_text }};
    }
  {% endstyle %}
{% endif %}

{% schema %}
  {
    "name": "Heading",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Subheading",
        "default": "Use this to separate sections or make clear call to actions."
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }, 
      {
        "type": "select",
        "id": "alignment",
        "label": "Text alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "left"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Custom background color",
        "default": "rgba(0,0,0,0)"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Custom text color",
        "default": "rgba(0,0,0,0)"
      }
    ], 
    "presets": [{
      "name": "Heading",
      "category": "Text"
    }]
  }
{% endschema %}