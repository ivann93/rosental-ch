<ul class="sidebar__menu sidebar--{{ type }}">

	{% for link in menu.links %}

		<li class="{% if link.links != blank %} has-submenu has-first-submenu {% endif %}" {% if link.links != blank %} aria-haspopup="true" {% endif %}>

			<a href="{{ link.url }}" {% if link.active or link.child_active %} class="selected" {% endif %}>
				<span style="flex: 1;"><span class="underline-animation">{{ link.title }}</span></span>
				{% comment %}
				{% if link.links != blank %} {% render 'theme-symbols', icon: 'arrow' %} {% endif %}
				{% endcomment %}
			</a>

			{% if link.links != blank %}

				<div data-handle="{{ link.handle }}" class="sidebar__submenu sidebar__submenu--first sidebar--{{ type }}" aria-expanded="false">

					<div class="sidebar__container">

						<div class="sub-menu">

							<ul>

								{% for childlink in link.links %}

									<li class="{% if childlink.links != blank %} has-submenu has-second-submenu {% endif %}" {% if childlink.links != blank %} aria-haspopup="true" {% endif %}>

										<a href="{{ childlink.url }}" {% if childlink.active or childlink.child_active %} class="selected" {% endif %}>
											<span style="flex: 1;"><span class="underline-animation">{{ childlink.title | escape }}</span></span>
											{% if childlink.links != blank %} {% render 'theme-symbols', icon: 'arrow' %} {% endif %}
										</a>

										{% if childlink.links != blank %}
											
											<div data-handle="{{ childlink.handle }}" class="sidebar__submenu sidebar__submenu--second sidebar--{{ type }}" aria-expanded="false">

												<div class="sidebar__container">

													<div class="sub-menu">

														<ul>

															{% for subchildlink in childlink.links %}

																<li>
																	<a href="{{ subchildlink.url }}" {% if subchildlink.active %} class="selected" {% endif %}><span class="underline-animation">{{ subchildlink.title | escape }}</span></a>
																</li>

															{% endfor %}

														</ul>

													</div>

												</div>

											</div>

										{% endif %}

									</li>

								{% endfor %}

							</ul>
		
						</div>

					</div>

				</div>

			{% endif %}

		</li>

	{% endfor %}

</ul>