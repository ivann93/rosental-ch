{%- assign no_robots = false -%}
{%- if product -%}
  {%- for tag in product.tags -%}
    {%- if tag contains 'norobots' -%}
      {%- assign no_robots = true -%}
      {%- break -%}
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}
{%- if no_robots -%}
<meta name="robots" content="noindex">
{%- endif -%}