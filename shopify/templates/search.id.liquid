{%- layout none -%}
{%- paginate search.results by 250 -%}
{%- if search.performed -%}
{"products": [
	{%- for item in search.results -%}
		{%- unless item.object_type == 'product' -%}{%- continue -%}{%- endunless -%}
		{
			"id": "{{ item.id }}",
			"featured_image": {{ item.featured_image | json }},
			"available": {{ item.available | json }},
			{% if item.metafields.global.product_worth != blank %}
			"product_worth": {{ item.metafields.global.product_worth | json }}
			{% else %}
			"product_worth": ""
			{% endif %}
		}
		{%- unless forloop.last %},{% endunless -%}
	{%- endfor -%}
]}
{%- endif -%}
{%- endpaginate -%} 