<script>

  $(window).on('load', function(){

		if ( location.hash == "#add-comment-title" ) {
			setTimeout(function(){
				$('html').scrollTop($('#add-comment-title').offset().top - 50);
			}, 500); 
		} else if ( location.hash == "#comments" ) {
			setTimeout(function(){
				$('html').scrollTop($('#comments').offset().top - 50);
			}, 500);
		}

	});

</script>
{% endcapture %}
