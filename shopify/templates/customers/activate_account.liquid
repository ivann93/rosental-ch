<div class="page-content">

	<header class="page-title">
		<h1 class="title h0">{{ 'customers.account_activation_page.title' | t }}</h1>
		<span class="subtitle">{{ 'customers.account_activation_page.subtitle' | t }}</span>
	</header>

	{% form 'activate_customer_password' %}

		<div class="krown-columns-container one-whole">

			{% include 'form-errors' %}

			<div class="krown-column-row one-half first">
				<label for="customer_password">{{ 'customers.account_activation_page.form_password_label' | t }}</label>
				<input type="password" value="" name="customer[password]" id="customer_password">
			</div>

			<div class="krown-column-row one-half last">
				<label for="customer_password_confirmation">{{ 'customers.account_activation_page.form_password_confirm_label' | t }}</label>
				<input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation">
			</div>

			<div class="login-actions">
				<input type="submit" class="button button--solid button--wide" value="{{ 'customers.account_activation_page.form_activate_button' | t }}">
				<input type="submit" class="text-link" name="decline" id="customer_decline" value="{{ 'customers.account_activation_page.form_decline_button' | t }}">
			</div>

		</div>

	{% endform %}

</div>