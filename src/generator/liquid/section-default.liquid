<div class="page-template-default"  data-section-id="{{ section.id }}" data-section-type="page-template">
  {% for block in section.blocks %}

    {% case block.type %}
      
      {% when 'headline' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-headline', snippet_instance: block, snippet_type: 'block' %}
        </div>

      {% when 'rich-text' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-rich-text', snippet_instance: block, snippet_type: 'block' %}
        </div>

      {% when 'quote' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-quote', snippet_instance: block, snippet_type: 'block' %}
        </div>  
      
      {% when 'image' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-image', snippet_instance: block, snippet_type: 'block' %}
        </div>

      {% when 'spacer' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-spacer', snippet_instance: block, snippet_type: 'block' %}
        </div> 

      {% when 'double-image' %}
        <div {{ block.shopify_attributes }}>
          {% include 'section-double-image', snippet_instance: block, snippet_type: 'block' %}
        </div> 

    {% endcase %}
  {% endfor %}

</div>


